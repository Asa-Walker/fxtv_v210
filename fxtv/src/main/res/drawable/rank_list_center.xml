<?xml version="1.0" encoding="utf-8"?><!-- 选中 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/color_line" />
        </shape>
    </item>
    <!-- 给每条边框设置颜色 -->
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/text_color_white" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>


</layer-list>