<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="120dip"
            android:layout_height="67.5dip" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="120dip"
                android:layout_height="67.5dip" />

            <ImageView
                android:id="@+id/present_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@id/img"
                android:src="@drawable/icon_prize"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/video_bottom_bg"
                android:paddingLeft="5dip"
                android:paddingRight="5dip" >

                <TextView
                    android:id="@+id/lable1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="lable1"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size12" />

                <TextView
                    android:id="@+id/lable2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="lable2"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size12" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="35dip"
                android:layout_height="12dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner_logo"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/left"
            android:ellipsize="end"
            android:lines="2"
            android:text="title"
            android:textColor="@color/text_color_default_dark"
            android:textSize="@dimen/text_size14" />

        <ImageView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/left"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:src="@drawable/icon_download0" />

        <TextView
            android:id="@+id/lable4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/left"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/down"
            android:text="lable4"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size12" />

        <TextView
            android:id="@+id/lable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/left"
            android:layout_marginLeft="5dip"
            android:layout_toLeftOf="@id/lable4"
            android:layout_toRightOf="@id/left"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="lable3"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size12" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/color_line" />

</LinearLayout>