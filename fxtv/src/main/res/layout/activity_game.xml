<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include layout="@layout/view_actionbar" />

    <com.fxtv.framework.widget.pagerindicator.TabPageIndicator
        android:id="@+id/fragment_tab_main_tab"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/indicator_max_height" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_game_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>