<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_find_password_next_step_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_login_edittext"
            android:hint="设置新密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size20" />

        <EditText
            android:id="@+id/activity_find_password_next_step_repassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_edittext"
            android:hint="再次输入"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size20" />

        <EditText
            android:id="@+id/activity_find_password_next_step_reconmend_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_edittext"
            android:hint="请输入邀请码(非必填)"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size20" />

        <Button
            android:id="@+id/activity_find_password_next_step_btn_change_pass"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btn2"
            android:text="完成"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size20" />
    </LinearLayout>
</LinearLayout>