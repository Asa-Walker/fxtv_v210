<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_frame_bottom"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rank_list_num"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/rank_list_num"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.fxtv.framework.widget.circular.CircularImage
            android:id="@+id/rank_list_anchor_img"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/rank_list_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="小智"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>

    <TextView
        android:id="@+id/rank_list_descirbe_num"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="订阅数:21312"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size14" />

    <TextView
        android:id="@+id/rank_list_num_text"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|left"
        android:text="4"
        android:textColor="@color/text_color_default"
        android:textSize="@dimen/text_size22"
        android:textStyle="italic"
        android:visibility="gone" />

</RelativeLayout>