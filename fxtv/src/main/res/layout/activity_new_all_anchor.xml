<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/downlaod_favorites_history_actionbar" />

    <com.fxtv.framework.widget.pagerindicator.TabPageIndicator
        android:id="@+id/activity_new_all_anchor_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/indicator_max_height"
        android:layout_gravity="center_horizontal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_new_all_anchor_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>