<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_im"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/im_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_img"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn"
            android:clickable="true"
            android:onClick="backClick"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_left1"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:background="#7f000000"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/color_white"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/text_size22" />

            <TextView
                android:id="@+id/tv_head_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left|top"
                android:lineSpacingExtra="5dp"
                android:textColor="#e5FFFFFF"
                android:textSize="@dimen/text_size16" />


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tv_read_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="阅读"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical" />

        <TextView
            android:id="@+id/tv_complaints_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="吐槽"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical" />

        <TextView
            android:id="@+id/tv_attention_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="关注"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

</LinearLayout>