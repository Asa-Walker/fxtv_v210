<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/selector_btn"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/icon_arrow_left1" />

    <LinearLayout
        android:id="@+id/anctionbar_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/up_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_down"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/ab_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:text="清空全部"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size14" />

    <LinearLayout
        android:id="@+id/actionbar_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rank_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:text="周排行"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/my_up_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_down"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>