<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emoji="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fxtv.framework.widget.circular.CircularImage
            android:id="@+id/answer_user_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/answer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@id/answer_user_pic"
            android:paddingRight="70dp"
            android:singleLine="true"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/answer_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_name"
            android:layout_marginTop="8dip"
            android:layout_toRightOf="@id/answer_user_pic"
            android:text="刚刚"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size14" />

        <emojicon.EmojiconTextView
            android:id="@+id/answer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_publish_time"
            android:layout_marginTop="8dip"
            android:layout_toRightOf="@id/answer_user_pic"
            android:text="内容"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size18"
            emoji:emojiconSize="@dimen/emojiSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/answer_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@id/answer_user_pic"
            android:background="@color/color_line" />

        <ImageView
            android:id="@+id/ding_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_ding0" />
    </RelativeLayout>

</RelativeLayout>