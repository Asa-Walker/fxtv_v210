<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/vote_history_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="4月16日至4月20日，在本活动下参与以下英雄投票，得票最高的两个英雄中的一个将会出现在136期第一视角"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/vote_history_toupiaoshu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote_history_info"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="共有1869位玩家参与投票"
        android:textColor="@color/text_color_gray"
        android:textSize="10sp" />

    <com.fxtv.framework.widget.MyListView
        android:id="@+id/vote_history_result"
        style="@style/style_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote_history_toupiaoshu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/vote_result" />

</RelativeLayout>