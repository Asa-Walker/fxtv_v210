<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/view_actionbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <RelativeLayout
                android:id="@+id/activity_personal_information"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:background="@color/text_color_white" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="头像"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right1" />

                <com.fxtv.framework.widget.circular.CircularImage
                    android:id="@+id/activity_personal_information_user_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:layout_toLeftOf="@id/right_arrow"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/text_color_white" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="昵称"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_name"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="这就是个昵称"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="手机号"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_phone_number"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:paddingRight="20dp"
                    android:text="绑定手机"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_personal_information_birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="生日"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_birthday"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:hint="未填写"
                    android:paddingRight="20dp"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_personal_information_sex_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="性别"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_sex"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:hint="未填写"
                    android:paddingRight="20dp"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_personal_information_location_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="所在地"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_location"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:hint="未填写"
                    android:paddingRight="20dp"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_personal_information_qq_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="QQ"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_qq"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:hint="未填写"
                    android:paddingRight="20dp"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_personal_information_intresting_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="感兴趣的游戏:"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <TextView
                    android:id="@+id/activity_personal_information_intresting"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:hint="未填写"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_personal_information_code_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_frame_bottom" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center_vertical"
                    android:text="推荐码"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" />

                <EditText
                    android:id="@+id/activity_personal_information_code"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:hint="未填写"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textIsSelectable="true"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size18" 
                    android:editable="false"
                    android:background="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/color_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>