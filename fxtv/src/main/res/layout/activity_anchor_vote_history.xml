<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <include
        android:id="@+id/view_actionbar_layout_now"
        layout="@layout/view_actionbar" />

    <ListView
        android:id="@+id/vote_history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_actionbar_layout_now"
        android:divider="@null"
        android:dividerHeight="40dp" />

    <TextView
        android:id="@+id/view_actionbar_no_more_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="没有更多数据"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size22"
        android:visibility="gone" />

</RelativeLayout>