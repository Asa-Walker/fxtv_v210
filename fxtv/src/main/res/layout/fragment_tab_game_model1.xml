<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="120dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_tab_game_model_img"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:padding="5dip" />

        <Button
            android:id="@+id/fragment_tab_game_model_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/selector_btn2"
            android:padding="10dip"
            android:text="订阅"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size18" />

        <com.fxtv.threebears.view.wheel.WheelView
            android:id="@+id/wheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wheel_bg1"
            wheel:selectbg="@drawable/wheel_val1" />
    </LinearLayout>

    <com.fxtv.framework.widget.xlistview.XListView
        android:id="@+id/fragment_tab_game_model_lv"
        style="@style/style_lv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>