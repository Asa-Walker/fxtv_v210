<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <LinearLayout
        android:id="@+id/lineaer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_bg_frame_bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/all_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="全部暂停"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/all_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="全部开始"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_explorer_anchor_child_listview"
        style="@style/style_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineaer"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/rest_space"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/text_color_white"
        android:gravity="center"
        android:padding="5dp"
        android:text="剩余 : 0.91G/已使用 : 10.89G"
        android:textColor="@color/text_color_gray" />

</RelativeLayout>