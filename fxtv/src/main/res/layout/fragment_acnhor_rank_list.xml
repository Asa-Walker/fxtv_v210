<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/fragment_rank_list_rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/subscribe_rank_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_anchor_child"
            android:button="@null"
            android:gravity="center"
            android:text="订阅排行"
            android:textColor="@drawable/rank_list_text_select" />

        <RadioButton
            android:id="@+id/protection_rank_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_anchor_center_child"
            android:button="@null"
            android:gravity="center"
            android:text="守护排行"
            android:textColor="@drawable/rank_list_text_select" />

        <RadioButton
            android:id="@+id/hot_rank_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_anchor_child"
            android:button="@null"
            android:gravity="center"
            android:text="热度排行"
            android:textColor="@drawable/rank_list_text_select" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/anchor_rank_list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>