<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white">

    <TextView
        android:id="@+id/text_lottery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_frame_bottom"
        android:gravity="left"
        android:padding="10dp"
        android:text="评论"
        android:textColor="@color/text_color_default"
        android:textSize="@dimen/text_size16" />

    <ImageView
        android:id="@+id/cancel_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/text_lottery"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:src="@drawable/cancel_text" />

    <com.fxtv.framework.widget.xlistview.XListView
        android:id="@+id/fragment_comment_listview"
        style="@style/style_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_lottery"
        android:layout_marginBottom="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/video_play_comment_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_editext_comment"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="我也来说两句"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size14" />
    </LinearLayout>

</RelativeLayout>