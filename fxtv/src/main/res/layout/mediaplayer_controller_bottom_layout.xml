<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cc000000" >

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:padding="8dip"
        android:src="@drawable/play" />

    <ImageView
        android:id="@+id/btn_screen"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="8dip"
        android:src="@drawable/icon_full_screen" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dip"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/btn_screen"
        android:layout_toStartOf="@id/btn_screen"
        android:text="00:00"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/duration"
        android:layout_toStartOf="@id/duration"
        android:text="00:00/"
        android:textColor="#ffffff" />

    <SeekBar
        android:id="@+id/seekbar"
        style="@style/MediaController_SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toEndOf="@id/btn_start"
        android:layout_toLeftOf="@id/pos"
        android:layout_toRightOf="@id/btn_start"
        android:layout_toStartOf="@id/pos"
        android:max="1000" />

</RelativeLayout>