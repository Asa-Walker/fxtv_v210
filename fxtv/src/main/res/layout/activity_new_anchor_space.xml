<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/anchor_top"
        android:layout_width="match_parent"
        android:layout_height="190dip">

        <ImageView
            android:id="@+id/anchor_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_space_bg" />

        <com.fxtv.framework.widget.circular.CircularImage
            android:id="@+id/anchor_photo"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/default_img3" />

        <View
            android:layout_width="61dip"
            android:layout_height="61dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_anchor_zone_bg" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_arrow_left2" />

        <TextView
            android:id="@+id/anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/anchor_photo"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size16" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/anchor_photo"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/anchor_name"
            android:src="@drawable/icon_auth"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/top_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/anchor_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/anchor_photo"
            android:orientation="horizontal">

            <Button
                android:id="@+id/anchor_btn_guard"
                android:layout_width="70dip"
                android:layout_height="25dip"
                android:background="@drawable/shape_rectangle_circular_main"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/anchor_btn1"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size16" />

            <Button
                android:id="@+id/anchor_btn_order"
                android:layout_width="70dip"
                android:layout_height="25dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/shape_rectangle_circular_main"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/anchor_btn2"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_btn_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/activity_new_anchor_space_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/anchor_num_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="订阅"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/activity_new_anchor_space_protection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/anchor_num_guard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="守护"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/activity_new_anchor_space_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_new_anchor_space_mes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="留言"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/activity_new_anchor_space_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_new_anchor_space_act_conut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="动态"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size16" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/anchor_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_frame_bottom"
                android:padding="10dp"
                android:text="个人简介"
                android:textColor="@color/text_color_default"
                android:textSize="@dimen/text_size16" />

            <TextView
                android:id="@+id/anchor_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_frame_bottom"
                android:padding="10dp"
                android:textColor="@color/text_color_default"
                android:textSize="@dimen/text_size16" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_bg_frame_bottom"
                android:paddingTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_new_anchor_space_msg_text"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/anchor_msg_icon"
                        android:gravity="center_horizontal"
                        android:text="留言"
                        android:textColor="@color/text_color_default"
                        android:textSize="@dimen/text_size14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_new_anchor_space_act_text"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/anchor_act_icon"
                        android:gravity="center_horizontal"
                        android:text="动态"
                        android:textColor="@color/text_color_default"
                        android:textSize="@dimen/text_size14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_new_anchor_space_vote_text"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/icon_vote"
                        android:gravity="center_horizontal"
                        android:text="投票"
                        android:textColor="@color/text_color_default"
                        android:textSize="@dimen/text_size14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_new_anchor_space_recomend_text"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/anchor_recomend_icon"
                        android:gravity="center_horizontal"
                        android:text="推荐"
                        android:textColor="@color/text_color_default"
                        android:textSize="@dimen/text_size14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_new_anchor_space_shop_text"
                        android:layout_width="90dp"
                        android:layout_height="75dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/anchor_shop_icon"
                        android:gravity="center_horizontal"
                        android:text="店铺"
                        android:textColor="@color/text_color_default"
                        android:textSize="@dimen/text_size14"
                        android:visibility="gone" />
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_frame_bottom"
                android:padding="10dp">

                <TextView
                    android:id="@+id/new_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新视频(32)"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:id="@+id/activity_new_anchor_space_more_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right_blue"
                    android:text="查看更多"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size16" />
            </RelativeLayout>

            <com.fxtv.framework.widget.MyGridView
                android:id="@+id/activity_new_anchor_space_gv"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:listSelector="@color/color_transparency"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="5dp" />

            <RelativeLayout
                android:id="@+id/activity_new_anchor_space_all_ablum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_bg_frame_bottom"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部专辑"
                    android:textColor="@color/text_color_default"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:id="@+id/activity_new_anchor_space_more_ablum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_right_blue"
                    android:text="查看更多"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size16" />
            </RelativeLayout>

            <com.fxtv.framework.widget.MyListView
                android:id="@+id/activity_new_anchor_space_ablum_list"
                style="@style/style_lv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_color_white" />

            <TextView
                android:id="@+id/activity_new_anchor_space_anchor_shop_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_bg_frame_bottom"
                android:gravity="left"
                android:padding="10dp"
                android:text="主播店铺"
                android:textColor="@color/text_color_default"
                android:textSize="@dimen/text_size16" />

            <LinearLayout
                android:id="@+id/activity_new_anchor_space_Image_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical"
                android:padding="2dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/anchor_top" />

</RelativeLayout>